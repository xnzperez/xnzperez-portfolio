---
import "../styles/global.css";
// IMPORTAR COMPONENTES DESDE LAS RUTAS ORIGINALES
import Navbar from "../components/common/Navbar.astro";
import Footer from "../components/common/Footer.astro";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Carlos Pérez - Full Stack Developer Portfolio" } =
  Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="text-slate-400 font-sans flex flex-col min-h-screen antialiased selection:bg-cyan-400/30 selection:text-cyan-200"
    style="background-color: var(--bg-primary); color: var(--text-secondary);"
  >
    <Navbar />

    <main class="flex-grow w-full relative z-10">
      <slot />
    </main>

    <Footer />

    <style is:global>
      /* Scrollbar para tema oscuro */
      html.dark ::-webkit-scrollbar {
        width: 10px;
      }
      html.dark ::-webkit-scrollbar-track {
        background: #0a0e1a;
      }
      html.dark ::-webkit-scrollbar-thumb {
        background: #1e293b;
        border-radius: 5px;
        border: 2px solid #0a0e1a;
      }
      html.dark ::-webkit-scrollbar-thumb:hover {
        background: #22d3ee;
      }

      /* Scrollbar para tema claro */
      html:not(.dark) ::-webkit-scrollbar {
        width: 10px;
      }
      html:not(.dark) ::-webkit-scrollbar-track {
        background: #ffffff;
      }
      html:not(.dark) ::-webkit-scrollbar-thumb {
        background: #cbd5e1;
        border-radius: 5px;
        border: 2px solid #ffffff;
      }
      html:not(.dark) ::-webkit-scrollbar-thumb:hover {
        background: #0891b2;
      }
    </style>

    <script>
      // Detectar scroll para desvanecer el patrón de cuadrícula
      let scrollTimeout: ReturnType<typeof setTimeout>;

      window.addEventListener("scroll", () => {
        const body = document.body;

        if (window.scrollY > 100) {
          body.classList.add("scrolled");
        } else {
          body.classList.remove("scrolled");
        }
      });
    </script>
  </body>
</html>
