---
import "../styles/global.css";
// IMPORTAR COMPONENTES DESDE LAS RUTAS ORIGINALES
import Navbar from "../components/common/Navbar.astro";
import Footer from "../components/common/Footer.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
}

const {
  title,
  description = "Portfolio profesional de Carlos Pérez - Desarrollador Full Stack especializado en React, Node.js y tecnologías web modernas. Explora mis proyectos y experiencia.",
  image = "/og-image.jpg",
  type = "website",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteTitle = "Carlos Pérez - Full Stack Developer";
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />

    <!-- Viewport Meta Tag - Critical for mobile and performance -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="author" content="Carlos Pérez" />
    <meta
      name="keywords"
      content="desarrollador full stack, react, node.js, javascript, typescript, portfolio, web developer"
    />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:site_name" content={siteTitle} />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />
    <meta name="twitter:creator" content="@xnzperez" />

    <!-- Preconnect to external domains for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />

    <!-- Robots -->
    <meta name="robots" content="index, follow" />

    <!-- Theme Color -->
    <meta
      name="theme-color"
      content="#0a0e1a"
      media="(prefers-color-scheme: dark)"
    />
    <meta
      name="theme-color"
      content="#ffffff"
      media="(prefers-color-scheme: light)"
    />

    <!-- Structured Data (JSON-LD) -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: "Carlos Pérez",
        url: Astro.site,
        image: new URL(image, Astro.site),
        jobTitle: "Full Stack Developer",
        description: description,
        sameAs: [
          "https://github.com/xnzperez",
          "https://linkedin.com/in/xnzperez",
        ],
      })}
    />
  </head>
  <body
    class="text-slate-400 font-sans flex flex-col min-h-screen antialiased selection:bg-cyan-400/30 selection:text-cyan-200"
    style="background-color: var(--bg-primary); color: var(--text-secondary);"
  >
    <Navbar />

    <main id="main-content" class="flex-grow w-full relative z-10">
      <slot />
    </main>

    <Footer />

    <style is:global>
      /* Scrollbar para tema oscuro */
      html.dark ::-webkit-scrollbar {
        width: 10px;
      }
      html.dark ::-webkit-scrollbar-track {
        background: #0a0e1a;
      }
      html.dark ::-webkit-scrollbar-thumb {
        background: #1e293b;
        border-radius: 5px;
        border: 2px solid #0a0e1a;
      }
      html.dark ::-webkit-scrollbar-thumb:hover {
        background: #22d3ee;
      }

      /* Scrollbar para tema claro */
      html:not(.dark) ::-webkit-scrollbar {
        width: 10px;
      }
      html:not(.dark) ::-webkit-scrollbar-track {
        background: #ffffff;
      }
      html:not(.dark) ::-webkit-scrollbar-thumb {
        background: #cbd5e1;
        border-radius: 5px;
        border: 2px solid #ffffff;
      }
      html:not(.dark) ::-webkit-scrollbar-thumb:hover {
        background: #0891b2;
      }
    </style>

    <script>
      // Detectar scroll para desvanecer el patrón de cuadrícula
      let scrollTimeout: ReturnType<typeof setTimeout>;

      window.addEventListener("scroll", () => {
        const body = document.body;

        if (window.scrollY > 100) {
          body.classList.add("scrolled");
        } else {
          body.classList.remove("scrolled");
        }
      });
    </script>
  </body>
</html>
