---
import ThemeToggle from "./ThemeToggle.astro";

const navItems = [
  { name: "Projects", url: "#projects" },
  { name: "Experience", url: "#experience" },
  { name: "Education", url: "#education" },
  { name: "About", url: "#about" },
];
---

<header
  id="navbar-header"
  class="fixed top-0 z-50 w-full flex justify-center mt-6 transition-all duration-300"
>
  <nav
    id="navbar-container"
    class="flex items-center justify-between px-6 py-4 transition-all duration-500 w-full max-w-7xl rounded-none border border-transparent"
  >
    <a
      href="#home"
      class="text-xl font-bold tracking-tighter text-slate-100 hover:text-cyan-400 transition-colors z-50"
    >
      CPR<span class="text-cyan-400">.</span>
    </a>

    <ul class="hidden md:flex gap-8 items-center">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.url}
              class="text-[13px] font-mono font-medium text-slate-300 hover:text-cyan-400 transition-colors relative group"
            >
              {item.name}
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-cyan-400 transition-all duration-300 group-hover:w-full" />
            </a>
          </li>
        ))
      }
    </ul>

    <div class="hidden md:flex items-center gap-4">
      <div class="relative">
        <ThemeToggle />
      </div>

      <a
        href="/cv-carlos-perez.pdf"
        target="_blank"
        class="px-4 py-2 text-xs font-mono text-cyan-400 border border-cyan-400 rounded hover:bg-cyan-400/10 transition-colors"
      >
        Resume
      </a>
    </div>

    <button
      id="menu-btn"
      class="md:hidden text-cyan-400 focus:outline-none z-[60] relative w-8 h-8"
      aria-label="Toggle menu"
    >
      <span class="hamburger-line top-1 rotate-0"></span>
      <span class="hamburger-line top-1/2 -translate-y-1/2 opacity-100"></span>
      <span class="hamburger-line bottom-1 rotate-0"></span>
    </button>
  </nav>

  <div
    id="mobile-menu"
    class="fixed inset-0 bg-[#0a192f]/90 dark:bg-[#0a192f]/90 backdrop-blur-lg hidden flex-col items-center justify-center gap-8 md:hidden transition-all duration-300 z-40"
  >
    {
      navItems.map((item) => (
        <a
          href={item.url}
          class="text-xl font-mono text-slate-300 dark:text-slate-300 hover:text-cyan-400 mobile-link"
        >
          {item.name}
        </a>
      ))
    }
    <div class="relative mt-4 z-50">
      <ThemeToggle />
    </div>
    <a
      href="/cv-carlos-perez.pdf"
      target="_blank"
      class="px-8 py-3 mt-4 border border-cyan-400 text-cyan-400 rounded hover:bg-cyan-400/10 font-mono"
      >Resume</a
    >
  </div>
</header>

<script>
  const header = document.getElementById("navbar-header");
  const container = document.getElementById("navbar-container");
  const menuBtn = document.getElementById("menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const mobileLinks = document.querySelectorAll(".mobile-link");

  // Animación Scroll
  window.addEventListener("scroll", () => {
    if (window.scrollY > 20) {
      // Estado Scroll (Píldora)
      container?.classList.remove(
        "w-full",
        "max-w-7xl",
        "rounded-none",
        "border-transparent",
        "py-4"
      );
      container?.classList.add(
        "w-fit",
        "rounded-full",
        "bg-[#0a192f]/80",
        "backdrop-blur-md",
        "border-white/10",
        "shadow-2xl",
        "px-10",
        "py-2"
      );
      header?.classList.remove("mt-6");
      header?.classList.add("mt-2");
    } else {
      // Estado Top (Normal)
      container?.classList.add(
        "w-full",
        "max-w-7xl",
        "rounded-none",
        "border-transparent",
        "py-4"
      );
      container?.classList.remove(
        "w-fit",
        "rounded-full",
        "bg-[#0a192f]/80",
        "backdrop-blur-md",
        "border-white/10",
        "shadow-2xl",
        "px-10",
        "py-2"
      );
      header?.classList.add("mt-6");
      header?.classList.remove("mt-2");
    }
  });

  // Menú Móvil
  menuBtn?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
    mobileMenu?.classList.toggle("flex");
    menuBtn?.classList.toggle("open");
  });

  mobileLinks.forEach((link) => {
    link.addEventListener("click", () => {
      mobileMenu?.classList.add("hidden");
      mobileMenu?.classList.remove("flex");
      menuBtn?.classList.remove("open");
    });
  });
</script>
