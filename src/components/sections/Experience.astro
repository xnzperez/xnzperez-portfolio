---
const jobs = [
  {
    role: "Digital Transformation Participant",
    company: "Cámara de Comercio de Montería",
    date: "2024",
    description:
      "Participated in the Digital Transformation Prototyping Program, developing technological solutions to digitize local MSMEs (MiPymes). Focused on analyzing business requirements and prototyping scalable software architectures.",
    link: "https://drive.google.com/file/d/1pLwc1hbQCItOeIQNH7MhNeT-pjTBRfji/view?usp=sharing",
    type: "Prototyping Program",
  },
];

import { Icon } from "astro-icon/components";
---

<section id="experience" class="py-24 max-w-6xl mx-auto px-6">
  <h2 class="flex items-center gap-4 text-3xl font-bold text-slate-100 mb-16">
    <Icon name="mdi:briefcase-outline" class="w-8 h-8 text-cyan-400" />
    Experience
  </h2>

  <div class="space-y-12">
    {
      jobs.map((job) => (
        <div class="relative">
          <div class="hidden md:block absolute left-[150px] top-0 bottom-0 w-px bg-slate-800" />

          <div class="md:flex gap-8">
            <div class="md:w-[150px] flex-shrink-0 flex flex-col md:text-right mb-2 md:mb-0 pt-1 pr-8">
              <span class="text-slate-200 font-mono text-sm">{job.date}</span>
              <span class="text-cyan-400 text-xs mt-1 font-mono uppercase tracking-wide">
                {job.type}
              </span>
            </div>

            <div class="relative flex-grow pb-12 group">
              <div class="absolute -left-[37px] top-2 w-3 h-3 rounded-full bg-[#0a192f] border-2 border-cyan-400 group-hover:bg-cyan-400 transition-colors hidden md:block z-10" />

              <h3 class="text-xl font-bold text-slate-100 group-hover:text-cyan-400 transition-colors">
                {job.role}
              </h3>

              <p class="text-cyan-400 font-mono text-sm mb-4">
                @ {job.company}
              </p>

              <p class="text-slate-400 leading-relaxed max-w-xl text-lg">
                {job.description}
              </p>

              {job.link && (
                <a
                  href={job.link}
                  target="_blank"
                  class="inline-block mt-4 text-sm font-mono text-cyan-400 border-b border-cyan-400/30 hover:border-cyan-400 transition-colors pb-1"
                >
                  View Certificate / Evidence
                </a>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
