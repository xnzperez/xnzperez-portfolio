---
const jobs = [
  {
    role: "Digital Transformation Participant",
    company: "Cámara de Comercio de Montería",
    date: "2024",
    description:
      "Participated in the Digital Transformation Prototyping Program, developing technological solutions to digitize local MSMEs (MiPymes). Focused on analyzing business requirements and prototyping scalable software architectures.",
    link: "https://drive.google.com/file/d/1pLwc1hbQCItOeIQNH7MhNeT-pjTBRfji/view?usp=sharing",
    type: "Prototyping Program",
  },
];
---

<section id="experience" class="py-20 max-w-4xl mx-auto px-4">
  <h2 class="text-3xl font-bold text-dark-100 mb-12 flex items-center gap-4">
    <span class="text-primary">02.</span> Experience
    <span class="h-px bg-dark-200/30 flex-grow max-w-xs"></span>
  </h2>

  <div class="space-y-12">
    {
      jobs.map((job) => (
        <div class="relative pl-8 md:pl-0">
          <div class="hidden md:block absolute left-[150px] top-0 bottom-0 w-px bg-white/10" />

          <div class="md:flex gap-10">
            <div class="md:w-[150px] flex-shrink-0 flex flex-col md:text-right mb-2 md:mb-0">
              <span class="text-primary font-mono text-sm">{job.date}</span>
              <span class="text-xs text-dark-200 mt-1">{job.type}</span>
            </div>

            <div class="relative flex-grow pb-12 group">
              <div class="absolute -left-[41px] top-1.5 w-3 h-3 rounded-full bg-dark-800 border border-primary group-hover:bg-primary transition-colors hidden md:block" />

              <h3 class="text-xl font-bold text-dark-100 group-hover:text-primary transition-colors">
                {job.role}
                <span class="text-primary">@ {job.company}</span>
              </h3>

              <p class="mt-4 text-dark-200 leading-relaxed max-w-xl">
                {job.description}
              </p>

              {job.link && (
                <a
                  href={job.link}
                  target="_blank"
                  class="inline-block mt-4 text-sm font-mono text-primary border-b border-primary/30 hover:border-primary transition-colors"
                >
                  View Certificate / Evidence
                </a>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
