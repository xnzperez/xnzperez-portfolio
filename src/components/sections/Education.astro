---
import { Icon } from "astro-icon/components";

// Datos de Educación [cite: 59, 63]
const education = [
  {
    institution: "Universidad Cooperativa de Colombia",
    degree: "Systems Engineering",
    period: "Jan 2022 - Dec 2026 (Expected)",
    description:
      "Currently in 9th Semester. Focused on Software Architecture and Backend Development.",
    icon: "lucide:graduation-cap",
  },
];

// Datos de Certificaciones
// Datos de Certificaciones
const certifications = [
  {
    title: "Full-Stack Developer with JavaScript",
    issuer: "Platzi",
    date: "2025",
    link: "https://platzi.com/p/xnzperez/ruta/100-ruta/diploma/detalle/",
    icon: "simple-icons:platzi",
  },
  // La Cámara de Comercio se movió a Experience.astro
];
---

<section class="py-20 border-t border-white/5 bg-dark-900/30">
  <div class="max-w-6xl mx-auto px-4">
    <h2
      class="text-3xl font-bold text-dark-100 mb-12 flex items-center gap-3 justify-center md:justify-start"
    >
      <span class="text-primary">03.</span> Education & Certifications
    </h2>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="lg:col-span-2 space-y-8">
        <h3
          class="text-xl font-mono text-dark-200 mb-6 flex items-center gap-2"
        >
          <Icon name="lucide:book-open" class="text-primary" /> Academic History
        </h3>

        {
          education.map((edu) => (
            <div class="relative pl-8 border-l border-white/10 hover:border-primary/50 transition-colors group">
              <div class="absolute -left-[5px] top-0 w-[9px] h-[9px] rounded-full bg-dark-800 border border-primary group-hover:bg-primary transition-colors" />

              <h4 class="text-2xl font-bold text-dark-100">
                {edu.institution}
              </h4>
              <div class="text-primary font-mono text-sm mb-2">
                {edu.degree}
              </div>
              <span class="text-xs text-dark-200 bg-white/5 px-2 py-1 rounded inline-block mb-4">
                {edu.period}
              </span>
              <p class="text-dark-200 leading-relaxed max-w-lg">
                {edu.description}
              </p>
            </div>
          ))
        }
      </div>

      <div>
        <h3
          class="text-xl font-mono text-dark-200 mb-6 flex items-center gap-2"
        >
          <Icon name="lucide:medal" class="text-primary" /> Certifications
        </h3>

        <div class="flex flex-col gap-4">
          {
            certifications.map((cert) => (
              <a
                href={cert.link}
                target="_blank"
                class="block p-4 rounded-xl bg-dark-800/50 border border-white/5 hover:border-primary/30 hover:bg-dark-800 transition-all group"
              >
                <div class="flex items-start gap-4">
                  <div class="p-2 bg-primary/10 rounded-lg text-primary group-hover:scale-110 transition-transform">
                    <Icon name={cert.icon} class="w-6 h-6" />
                  </div>
                  <div>
                    <h5 class="text-dark-100 font-bold text-sm group-hover:text-primary transition-colors">
                      {cert.title}
                    </h5>
                    <p class="text-dark-200 text-xs mt-1">
                      {cert.issuer} • {cert.date}
                    </p>
                  </div>
                  <Icon
                    name="lucide:external-link"
                    class="w-4 h-4 text-dark-200 ml-auto opacity-0 group-hover:opacity-100 transition-opacity"
                  />
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
