---
import { Icon } from "astro-icon/components";

// Datos de Educación
const education = [
  {
    institution: "Universidad Cooperativa de Colombia",
    degree: "Systems Engineering",
    period: "Jan 2022 - Dec 2026",
    description:
      "Currently in 9th Semester. Focused on Software Architecture, Backend Development, and Quality Assurance.",
  },
];

// Datos de Certificaciones
const certifications = [
  {
    title: "Full-Stack Developer with JavaScript",
    issuer: "Platzi",
    date: "2025",
    link: "https://platzi.com/p/xnzperez/ruta/100-ruta/diploma/detalle/",
    icon: "simple-icons:platzi", // Asegúrate de tener instalado @iconify-json/simple-icons
  },
];
---

<section id="education" class="py-12 max-w-6xl mx-auto px-6">
  <h2 class="flex items-center gap-4 text-2xl font-bold text-slate-100 mb-12">
    <Icon name="mdi:school-outline" class="w-8 h-8 text-cyan-400" />
    Education & Certifications
  </h2>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-16">
    <div class="lg:col-span-2">
      <h3
        class="flex items-center gap-2 text-lg font-bold text-slate-200 mb-6 font-mono"
      >
        Academic History
      </h3>

      <div class="relative border-l border-slate-800 ml-3 space-y-8">
        {
          education.map((edu) => (
            <div class="relative pl-8 md:pl-8 group">
              <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-[#0a192f] border-2 border-cyan-400 group-hover:bg-cyan-400 transition-colors z-10" />

              <h4 class="text-xl font-bold text-slate-100 group-hover:text-cyan-400 transition-colors">
                {edu.institution}
              </h4>
              <div class="text-cyan-400 font-mono text-sm mb-2 mt-1">
                {edu.degree}
              </div>
              <span class="text-xs text-slate-400 bg-white/5 px-2 py-1 rounded inline-block mb-4 border border-white/5">
                {edu.period}
              </span>

              <p class="text-slate-400 leading-relaxed max-w-lg">
                {edu.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>

    <div>
      <h3
        class="flex items-center gap-2 text-lg font-bold text-slate-200 mb-6 font-mono"
      >
        Certifications
      </h3>

      <div class="flex flex-col gap-4">
        {
          certifications.map((cert) => (
            <a
              href={cert.link}
              target="_blank"
              class="block p-4 rounded-xl bg-[#112240] border border-white/5 hover:border-cyan-400/30 hover:bg-[#1a2c4e] transition-all group shadow-lg"
            >
              <div class="flex items-start gap-4">
                <div class="p-2 bg-cyan-400/10 rounded-lg text-cyan-400 group-hover:scale-110 transition-transform">
                  <Icon name={cert.icon} class="w-6 h-6" />
                </div>

                <div>
                  <h5 class="text-slate-100 font-bold text-sm group-hover:text-cyan-400 transition-colors">
                    {cert.title}
                  </h5>
                  <p class="text-slate-400 text-xs mt-1">
                    {cert.issuer} • {cert.date}
                  </p>
                </div>

                <Icon
                  name="mdi:open-in-new"
                  class="w-4 h-4 text-slate-500 ml-auto opacity-0 group-hover:opacity-100 transition-opacity"
                />
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
